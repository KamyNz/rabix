{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["steps"],
    "properties": {
        "steps": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/step"
            }
        },
        "apps": {
            "type": "object",
            "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": { "type": "object" }
            }
        }
    },
    "definitions": {
        "step": {
            "type": "object",
            "required": ["id", "app"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "app": {
                    "oneOf": [
                        {"type": "string"},
                        {"type": "object"}
                    ]
                },
                "inputs": {
                    "type": "object"
                },
                "parameters": {
                    "type": "object"
                },
                "output": {
                    "type": "object"
                }
            }
        },
        "app": {
            "oneOf": [
                {"$ref": "app-docker.json#"},
                {"$ref": "app-mock.json#"}
            ]
        }
    }
}