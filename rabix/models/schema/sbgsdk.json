{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Reproducible Analyses - Tool description schema",
    "type": "object",
    "required": ["inputs", "outputs", "params"],
    "properties": {
        "inputs": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/input"
            }
        },
        "params": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/param"
            }
        },
        "outputs": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/output"
            }
        }
    },
    "definitions": {
        "input": {
            "type": "object",
            "properties": {
                "id": {"type": "string"},
                "list": {"type": "boolean"},
                "name": {"type": "string"},
                "description": {"type": "string"},
                "required": {"type": "boolean"},
                "default": {"type": "any"}
            },
            "required": ["id"]
        },
        "param": {
            "type": "object",
            "properties": {
                "id": {"type": "string"},
                "list": {"type": "boolean"},
                "name": {"type": "string"},
                "description": {"type": "string"},
                "required": {"type": "boolean"}
            },
            "required": ["id", "type"]
        },
        "output": {
            "type": "object",
            "properties": {
                "id": {"type": "string"},
                "list": {"type": "boolean"},
                "name": {"type": "string"},
                "description": {"type": "string"},
                "required": {"type": "boolean"}
            },
            "required": ["id"]
        }
    }
}