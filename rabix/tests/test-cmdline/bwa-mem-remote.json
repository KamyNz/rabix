{
    "$job": {
        "tool": {
            "$ref": "#tool"
        },
        "inputs": {
            "reference": {
                "path": "https://s3.amazonaws.com/rabix/rabix-test/chr20.fa",
                "size": 123,
                "checksum": "sha1$hash",
                "meta": {
                    "file_type": "fastq"
                }
            },
            "reads": [
                {
                    "path": "https://s3.amazonaws.com/rabix/rabix-test/example_human_Illumina.pe_1.fastq",
                    "meta": {
                        "file_type": "fastq",
                        "sample": "SAMPLE1"
                    }
                },
                {
                    "path": "https://s3.amazonaws.com/rabix/rabix-test/example_human_Illumina.pe_2.fastq",
                    "meta": {
                        "file_type": "fastq",
                        "sample": "SAMPLE1"
                    }
                }
            ],
            "min_std_max_min": [
                1,
                2,
                3,
                4
            ],
            "minimum_seed_length": 3
        },
        "platform": "http://example.org/my_platform/v1",
        "allocatedResources": {
            "cpu": 4,
            "mem": 5000,
            "ports": [],
            "diskSpace": 20000,
            "network": false
        }
    },
    "tool": {
        "softwareDescription": {},
        "documentAuthor": "boysha",
        "requirements": {
            "environment": {
                "container": {
                    "type": "docker",
                    "uri": "docker://images.sbgenomics.com/rabix/bwa#9d3b9b0359cf",
                    "imageId": "9d3b9b0359cf"
                }
            },
            "resources": {
                "cpu": 0,
                "mem": 5000,
                "network": false
            },
            "platformFeatures": [
                "http://example.org/transforms#strip_ext"
            ]
        },
        "inputs": {
            "type": "object",
            "required": [
                "reference",
                "reads"
            ],
            "properties": {
                "reference": {
                    "type": "file",
                    "required": true,
                    "adapter": {
                        "order": 2,
                        "secondaryFiles": [
                            "*.amb",
                            "*.ann",
                            "*.bwt",
                            "*.pac",
                            "*.sa"
                        ]
                    }
                },
                "reads": {
                    "type": "array",
                    "required": true,
                    "minItems": 1,
                    "maxItems": 2,
                    "items": {
                        "type": "file",
                        "adapter": {
                            "streamable": true
                        }
                    }
                },
                "minimum_seed_length": {
                    "type": "integer",
                    "adapter": {
                        "order": 1,
                        "prefix": "-m",
                        "separator": " "
                    }
                },
                "min_std_max_min": {
                    "type": "array",
                    "minItems": 1,
                    "maxItems": 4,
                    "items": {
                        "type": "number"
                    },
                    "adapter": {
                        "order": 1,
                        "prefix": "-I",
                        "itemSeparator": ","
                    }
                }
            }
        },
        "outputs": {
            "type": "object",
            "required": [
                "sam", "tab"
            ],
            "properties": {
                "sam": {
                    "type": "file",
                    "adapter": {
                        "stdout": true,
                        "glob": "output.sam",
                        "streamable": true,
                        "meta": {
                            "file_type": "sam",
                            "__inherit__": "reads"
                        }
                    }
                }
            }
        },
        "adapter": {
            "baseCmd": [
                "bwa",
                "mem"
            ],
            "stdout": "output.sam",
            "environment": {
                "ENVVAR1": "/home/envvar1"
            },
            "args": [
                {
                    "order": 1,
                    "prefix": "-t",
                    "value": {
                        "expr": {
                            "lang": "javascript",
                            "value": "$job['allocatedResources']['cpu']"
                        }
                    }
                }
            ]
        }
    }
}
