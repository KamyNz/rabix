{
    "tool": {
        "name": "BWA_MEM",
        "softwareDescription": {},
        "documentAuthor": "boysha",
        "requirements": {
            "environment": {
                "container": {
                    "type": "docker",
                    "uri": "docker://images.sbgenomics.com/rabix/bwa#9d3b9b0359cf",
                    "imageId": "9d3b9b0359cf"
                }
            },
            "resources": {
                "cpu": 0,
                "mem": 5000,
                "network": false
            },
            "platformFeatures": [
                "http://example.org/transforms#strip_ext"
            ]
        },
        "inputs": {
            "type": "object",
            "required": [
                "reference",
                "reads"
            ],
            "properties": {
                "reference": {
                    "type": "file",
                    "adapter": {
                        "order": 2,
                        "secondaryFiles": [
                            "*.amb",
                            "*.ann",
                            "*.bwt",
                            "*.pac",
                            "*.sa"
                        ]
                    }
                },
                "reads": {
                    "type": "array",
                    "minItems": 1,
                    "maxItems": 2,
                    "adapter": {
                        "streamable": true
                    },
                    "items": {
                        "type": "file"
                    }
                },
                "minimum_seed_length": {
                    "type": "integer",
                    "adapter": {
                        "order": 1,
                        "prefix": "-m",
                        "separator": " "
                    }
                },
                "min_std_max_min": {
                    "type": "array",
                    "minItems": 1,
                    "maxItems": 4,
                    "items": {
                        "type": "number"
                    },
                    "adapter": {
                        "order": 1,
                        "prefix": "-I",
                        "itemSeparator": ","
                    }
                }
            }
        },
        "outputs": {
            "type": "object",
            "required": [
                "sam"
            ],
            "properties": {
                "sam": {
                    "type": "file",
                    "adapter": {
                        "stdout": true,
                        "glob": "output.sam",
                        "streamable": true,
                        "meta": {
                            "file_type": "sam",
                            "__inherit__": "reads"
                        }
                    }
                }
            }
        },
        "adapter": {
            "baseCmd": [
                "bwa",
                "mem"
            ],
            "stdout": "output.sam",
            "environment": {
                "ENVVAR1": "/home/envvar1"
            },
            "args": [
                {
                    "order": 1,
                    "prefix": "-t",
                    "value": {
                        "$expr": "$job['allocatedResources']['cpu']"
                    }
                }
            ]
        }
    }
}