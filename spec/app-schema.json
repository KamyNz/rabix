{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Reproducible Computation - Tool description schema",
  "description": "",
  "definitions": {
    "schema": {
      "type": "object",
      "properties": {
        "$$type":       {"enum": ["schema/app/sbgsdk"]},
        "inputs":       { "type": "array", "items": {"$ref": "#/definitions/input"}},
        "params":       { "type": "array", "items": {"$ref": "#/definitions/param"}} }
      },
      "required": ["$$type"]
    },
    "input": {
      "type": "object",
      "properties": {
        "$$type":       {"enum": ["job"]},
        "job_id":       { "type": "string" },
        "resources":    { "$ref": "#/definitions/resources" },
        "args":         { "type": "object" }
      },
      "required": ["$$type", "job_id", "args", "resources"]
    },
    "param": {
      "type": "object",
      "properties": {
        "$$type":       {"enum": ["outputs"]},
        "outputs":      { "type": "object" }
      },
      "required": ["$$type", "outputs"]
    },
    "output":{
      "type": "object",
      "properties": {
        "$$type":       {"enum": ["outputs"]},
        "outputs":      { "type": "object" }
      },
      "required": ["$$type", "outputs"]
    },
    
    "tool": {
      "type": "object",
      "properties": {
        "schema":       { "type": "object" }
      }
    },
    
    "docker_tool": {
    
    },
    
    "mock_tool": {
    
    }
    
  },

  "type": "object",

  "properties": {
        "$$type":       { "type": "string" },
        "job_id":       { "type": "string" },
        "resources":    { "$ref": "#/definitions/resources" },
        "args":         { "type": "object" }
  },
  
  "required": []
}